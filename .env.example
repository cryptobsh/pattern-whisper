# Copy this file to .env.local and fill in your values

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# IMPORTANT: Never commit this key!
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Generate a secure token for API protection
AUTH_TOKEN=your_secure_random_token

# Vercel Configuration
NEXT_PUBLIC_VERCEL_URL=https://your-app.vercel.app

# Feature Flags
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_ENABLE_CRYPTO=true
NEXT_PUBLIC_ENABLE_INTRADAY=false

# Development
NODE_ENV=development